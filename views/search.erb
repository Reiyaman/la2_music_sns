<section class="center-vertical">
	<h1>検索フォーム</h1>
	<form action = "/search/result" method = "post">
		<input type="text" name="keyword" placeholder="アーティスト名">
		<input type="submit" value="検索">
	</form>
	<h2>検索結果</h2>

		<div class="center-hrizontal">
				<% if !@songs.empty? %>
				<% @songs.each do |song| %>
					<div class="post center-vertical">
						<img src= "<%= song["artworkUrl100"] %>">
						<p><%= song["artistName"] %></p>
						<p><%= song["collectionName"] %></p>
						<p><%= song["trackName"] %></p>
						<a href="<%= song["previewUrl"] %>">サンプル</a>
						<form action = "/posting" method = "post">
							<input type = "hidden" name = "artist" value = "<%= song["artistName"] %>">
							<input type = "hidden" name = "jacket" value = "<%= song["artworkUrl100"] %>">
							<input type = "hidden" name = "resource" value = "<%= song["previewUrl"] %>">
							<input type = "hidden" name = "music" value = "<%= song["trackName"] %>">
							<input type = "hidden" name = "album" value = "<%= song["collectionName"] %>">
							<input type="text" name="comment" placeholder="コメント">
							<input type="submit" value="投稿">
						</form>
					</div>
				<% end %>
				<% else %>
				<p>検索結果がありません</p>
				<% end %>
		</div>

</section>